{
  "name": "vue-boilerplate",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lintjs": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "lintcss": "stylelint \"src/**/*.{css,vue}\" --fix",
    "editorconfig": "editorconfig-checker -exclude \"**/node_modules/**\"",
    "format": "prettier --write src/",
    "test": "npm run editorconfig && npm run lintcss && npm run lintjs && npm run type-check"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "lint-staged": {
    "**/*.vue": [
      "eslint --fix --max-warnings 0",
      "stylelint --fix",
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "**/*.{css, scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "!**/*.{js,jsx,ts,tsx,vue,css,scss}": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "vue": "^3.4.29",
    "vue-router": "^4.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.5",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.2.1",
    "editorconfig-checker": "^5.1.8",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.2.5",
    "stylelint": "^16.9.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "typescript": "~5.4.0",
    "vite": "^5.3.1",
    "vue-tsc": "^2.0.21"
  }
}
